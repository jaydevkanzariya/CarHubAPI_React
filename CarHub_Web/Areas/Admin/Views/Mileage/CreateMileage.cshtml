@model CarHub_Web.Models.VM.MileageCreateVM

<form asp-action="CreateMileage">
    <br />
    <div class="container border p-3">
        <h4 class="text-primary">Add Mileage Of  @Model.Car.Name </h4>
        <hr />

        <div class="row">
            <input hidden asp-for="Car.Id" />
            <input hidden asp-for="Car.Name" />
            <input hidden asp-for="Car.StartingPrice" />
            <input hidden asp-for="Car.EndPrice" />
            <input hidden asp-for="Car.ManufacturingYear" />
            <div asp-validation-summary="All" class="text-danger"></div>

            @*<div class="col-2">
                <label asp-for="Mileage.CarId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>*@
            @*<div class="col-10 pb-3">
                <select asp-for="Mileage.CarId" class="form-select" asp-items="@Model.CarList">
                    <option disabled selected>--Select Car--</option>
                </select>
                <span asp-validation-for="Mileage.CarId" class="text-danger"></span>
            </div>*@

            <div class="col-2">
                <label asp-for="Mileage.FuelType" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Mileage.FuelType" class="form-control" />
                <span asp-validation-for="Mileage.FuelType" class="text-danger"></span>
            </div>
            


            <div class="col-2">
                <label asp-for="Mileage.Transmission" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Mileage.Transmission" class="form-control" rows="5"></input>
                <span asp-validation-for="Mileage.Transmission" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Mileage.Average" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Mileage.Average" class="form-control" rows="5"></input>
                <span asp-validation-for="Mileage.Average" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <input type="submit" value="Save" class="btn btn-primary form-control" />
            </div>
           
            <div class="col-5 ">
                <a asp-action="IndexCar" asp-controller="Car" class="btn-primary btn form-control ">Back to List</a>
            </div>
           


        

        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
