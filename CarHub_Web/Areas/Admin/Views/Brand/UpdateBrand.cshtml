@model CarHub_Web.Models.Dto.BrandUpdateDTO



<form asp-action="UpdateBrand">
    <br />
    <div class="container border p-3">
        <h4 class="text-primary">Update Brand</h4>
        <hr />

        <input hidden asp-for="Id" />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="BrandName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="BrandName" class="form-control" />
                <span asp-validation-for="BrandName" class="text-danger"></span>
            </div>


            <div class="col-2">
                <label asp-for="BrandImage" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input type="file" name="file" class="form-control border-0 shadow" />

            </div>
            <div class="mb-3">
                <label asp-for="IsActive" style="margin-right: 150px;"></label>
                <input asp-for="IsActive" type="checkbox" value="true" checked />
            </div>
            <div class="mb-3">
                <label asp-for="IsDelete" style="margin-right: 150px;"></label>
                <input asp-for="IsDelete" type="checkbox" value="true" checked />
            </div>


            <div class="col-5 offset-2">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-5 ">
                <a asp-action="IndexBrand" asp-controller="Brand" class="btn-primary btn form-control ">Back to List</a>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
