@model CarHub_Web.Models.Dto.BrandDTO
<form asp-action="DeleteBrand">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Brand</h1>
        <hr />

        <input hidden asp-for="Id" />
        <div class="row">

            <div class="col-2">
                <label asp-for="BrandName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="BrandName" disabled class="form-control" />

            </div>


            <div class="col-2">
                <label asp-for="BrandImage" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="BrandImage" disabled class="form-control" />

            </div>
            <div class="mb-3">
                <label asp-for="IsActive"></label>
                <input asp-for="IsActive" disabled type="checkbox" value="true" checked />
            </div>
            <div class="mb-3">
                <label asp-for="IsDelete"></label>
                <input asp-for="IsDelete" disabled type="checkbox" value="true" checked />
            </div>


            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
            <div class="col-5 offset-2">
                <a asp-action="IndexBrand" asp-controller="Brand" class="btn-primary btn form-control ">Back to List</a>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}