@model CarHub_Web.Models.VM.FeatureCreateVM

<form asp-action="CreateFeature">
    <br />
    <div class="container border p-3">
        <h4 class="text-primary">Create Feature</h4>
        <hr />

        <div class="row">
    @*        <div asp-validation-summary="ModelOnly" class="text-danger"></div>*@

            <div class="col-2">
                <label asp-for="Feature.Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Feature.Name" class="form-control" />
                <span asp-validation-for="Feature.Name" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Feature.FeatureTypeId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="Feature.FeatureTypeId" class="form-select" asp-items="@Model.FeatureTypeList">
                    <option disabled selected>--Select FeatureType--</option>
                </select>
                <span asp-validation-for="Feature.FeatureTypeId" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-5 ">
                <a asp-action="IndexFeature" asp-controller="Feature" class="btn-primary btn form-control ">Back to List</a>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}