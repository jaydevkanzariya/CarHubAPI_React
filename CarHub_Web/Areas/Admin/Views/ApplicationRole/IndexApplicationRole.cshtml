@model IEnumerable<CarHub_Web.Models.Dto.ApplicationRoleDTO>
<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Role List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-controller="ApplicationRole" asp-action="CreateApplicationRole" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Role</a>
		</div>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>
					RoleId
				</th>
				<th>
					RoleName
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.Name</td>

					<td>
						<a asp-controller="ApplicationRole" asp-action="UpdateApplicationRole" asp-route-ApplicationRoleId="@item.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
						<a onClick="Delete('@Url.Action("DeleteApplicationRole", "ApplicationRole", new { ApplicationRoleId = @item.Id })')" class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>

	@section Scripts{

		<script>
			function Delete(url) {
				debugger
				Swal.fire({
					title: 'Are you sure?',
					text: "You won't be able to revert this!",
					icon: 'warning',
					showCancelButton: true,
					confirmButtonColor: '#3085d6',
					cancelButtonColor: '#d33',
					confirmButtonText: 'Yes, delete it!'
				}).then((result) => {
					if (result.isConfirmed) {
						$.ajax({
							url: url,
							type: 'DELETE',
							success: function (data) {
								window.location.reload(true);
							window.location.href = '@Url.Action("IndexApplicationRole", "ApplicationRole")'; // Replace with your controller and action names
							}
						})
					}
				})
			}
		</script>

		@{
			<partial name="_ValidationScriptsPartial" />
		}
	}

