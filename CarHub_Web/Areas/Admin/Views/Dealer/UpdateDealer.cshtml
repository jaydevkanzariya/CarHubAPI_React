@model CarHub_Web.Models.VM.DealerUpdateVM


<form asp-action="UpdateDealer">
    <br />
    <div class="container border p-3">
        <h4 class="text-primary">Update Dealer</h4>
        <hr />
        <input hidden asp-for="Dealer.Id" />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>


            <div class="col-2">
                <label asp-for="Dealer.DealerName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Dealer.DealerName" class="form-control" />
                <span asp-validation-for="Dealer.DealerName" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Dealer.MobileNumber" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Dealer.MobileNumber" class="form-control" />
                <span asp-validation-for="Dealer.MobileNumber" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Dealer.Email" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Dealer.Email" class="form-control" />
                <span asp-validation-for="Dealer.Email" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Dealer.DealerLocation" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Dealer.DealerLocation" class="form-control" />
                <span asp-validation-for="Dealer.DealerLocation" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Dealer.BrandId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="Dealer.BrandId" class="form-select" asp-items="@Model.BrandList">
                    <option disabled selected>--Select Brand--</option>
                </select>
                <span asp-validation-for="Dealer.BrandId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Dealer.IsAvailable"></label>
                <input asp-for="Dealer.IsAvailable" type="checkbox" value="true" checked />
            </div>

            <div class="col-5 offset-2">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-5 ">
                <a asp-action="IndexDealer" asp-controller="CarDealer" class="btn-primary btn form-control ">Back to List</a>
            </div>
            
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

