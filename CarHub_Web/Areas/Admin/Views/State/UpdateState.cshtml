@model CarHub_Web.Models.VM.StateUpdateVM<form asp-action="UpdateState">    <br />    <div class="container border p-3">        <h4 class="text-primary">Update State</h4>        <hr />        <input hidden asp-for="State.Id" />        <div class="row">            <div asp-validation-summary="All" class="text-danger"></div>            <input asp-for="State.Id" hidden />            <div class="col-2">                <label asp-for="State.StateName" class="control-label pt-2" style="font-size:20px;">State Name</label>            </div>            <div class="col-10 pb-3">                <input asp-for="State.StateName" class="form-control" />                <span asp-validation-for="State.StateName" class="text-danger"></span>            </div>            <div class="col-2">                <label asp-for="State.CountryId" class="control-label pt-2" style="font-size:20px;"></label>            </div>            <div class="col-10 pb-3">                <select asp-for="State.CountryId" class="form-select" asp-items="@Model.CountryList">                    <option disabled selected>--Select Country--</option>                </select>                <span asp-validation-for="State.CountryId" class="text-danger"></span>            </div>            <div class="col-2">                <label asp-for="State.IsActive" class="control-label pt-2" style="font-size:20px;"></label>            </div>            <div class="col-10 pb-3">                <input type="checkbox" asp-for="State.IsActive" value="true" checked />                <span asp-validation-for="State.IsActive" class="text-danger"></span>            </div>            <div class="row offset-2">                <div class="col-5">                    <input type="submit" value="Update" class="btn btn-primary form-control" />                </div>                <div class="col-5">                    <a asp-action="IndexState" asp-controller="State" class="btn-primary btn form-control ">Back to List</a>                </div>            </div>        </div>    </div></form>@section Scripts {    <partial name="_ValidationScriptsPartial" />}