@model CarHub_Web.Models.VM.StateCreateVM

<form asp-action="CreateState">
    <br />
    <div class="container border p-3">
        <h4 class="text-primary">Create State</h4>
        <hr />

        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="State.StateName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="State.StateName" class="form-control" />
                <span asp-validation-for="State.StateName" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="State.CountryId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="State.CountryId" class="form-select" asp-items="@Model.CountryList">
                    <option disabled selected>--Select Country--</option>
                </select>
                <span asp-validation-for="State.CountryId" class="text-danger"></span>
            </div>


            <div class="col-2">
                <label asp-for="State.IsActive" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input type="checkbox" asp-for="State.IsActive" value="true" checked />
                <span asp-validation-for="State.IsActive" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
           
            <div class="col-5 ">
                <a asp-action="IndexState" asp-controller="State" class="btn-primary btn form-control ">Back to List</a>
            </div>
            
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


