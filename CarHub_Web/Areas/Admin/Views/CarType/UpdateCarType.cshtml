@model CarHub_Web.Models.Dto.CarTypeUpdateDTO



<form asp-action="UpdateCarType">
    <br />
    <div class="container border p-3">
        <h4 class="text-primary">Update CarType</h4>
        <hr />

        <input hidden asp-for="Id" />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="TypeName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="TypeName" class="form-control" />
                <span asp-validation-for="TypeName" class="text-danger"></span>
            </div>

            
            <div class="col-5 offset-2">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-5 ">
                <a asp-action="IndexCarType" asp-controller="CarType" class="btn-primary btn form-control ">Back to List</a>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
