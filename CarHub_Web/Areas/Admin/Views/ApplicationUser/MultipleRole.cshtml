@model CarHub_Web.Models.VM.UserVM

<form asp-action="MultipleRole">
    <div class="py-5 text-center">
        <h2>Edit User</h2>
    </div>

    <div class="row g-5">
        <div class="col-md-7 col-lg-8">
            <input hidden asp-for="@Model.ApplicationUser.Id" />
            <div class="row g-3">
                <div class="col-sm-6">
                    <label asp-for="@Model.ApplicationUser.FirstName" class="form-label"></label>
                    <input asp-for="@Model.ApplicationUser.FirstName" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="@Model.ApplicationUser.FirstName" class="text-danger">
                    </span>
                </div>

                <div class="col-sm-6">
                    <label asp-for="@Model.ApplicationUser.LastName" class="form-label"></label>
                    <input asp-for="@Model.ApplicationUser.LastName" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="@Model.ApplicationUser.LastName" class="text-danger">
                    </span>
                </div>

                <div class="col-12">
                    <label asp-for="@Model.ApplicationUser.UserName" class="form-label"></label>
                    <div class="input-group has-validation">
                        <span class="input-group-text"></span>
                        <input asp-for="@Model.ApplicationUser.UserName" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="@Model.ApplicationUser.UserName" class="text-danger">
                        </span>
                    </div>
                </div>
            </div>

            <hr class="my-4">

            <h4 class="mb-3">Roles</h4>

            <div class="my-3">

                @for (int index = 0; index < @Model.ApplicationRoleList.Count(); index++)
                {
                    <div class="col-2 m-2">
                        <input type="checkbox" asp-for="@Model.ApplicationRoleList[index].IsChecked" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model.ApplicationRoleList[index].IsChecked">@Model.ApplicationRoleList[index].Name</label>
                        <input type="hidden" asp-for="@Model.ApplicationRoleList[index].Id" />
                        <input type="hidden" asp-for="@Model.ApplicationRoleList[index].Name" />
                        <br />
                    </div>
                }
            </div>

            <hr class="my-4">

            <button class="w-100 btn btn-primary btn-lg" type="submit">Save</button>
            
        </div>
    </div>
</form>



