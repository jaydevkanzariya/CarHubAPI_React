@model CarHub_Web.Models.VM.CarDeleteVM

<form asp-action="DeleteCar">
    <br />
    <div class="container border p-3">
        <h4 class="text-primary">Delete Car</h4>
        <hr />
        <input hidden asp-for="Car.Id" />
        <div class="row">

         

            <div class="col-2">
                <label asp-for="Car.Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Car.Name" disabled class="form-control" />
               
            </div>

            <div class="col-2">
                <label asp-for="Car.Details" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Car.Details" disabled class="form-control" rows="5"></textarea>
              
            </div>


            <div class="col-2">
                <label asp-for="Car.BrandId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="Car.BrandId" disabled class="form-select" asp-items="@Model.BrandList">
                    <option disabled selected>--Select Brand--</option>
                </select>
                
            </div>

            <div class="col-2">
                <label asp-for="Car.CarTypeId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="Car.CarTypeId" disabled class="form-select" asp-items="@Model.CarTypeList">
                    <option disabled selected>--Select CarType--</option>
                </select>
              
            </div>



            <div class="col-2">
                <label asp-for="Car.StartingPrice" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Car.StartingPrice" disabled class="form-control" rows="5"></input>
              
            </div>

            <div class="col-2">
                <label asp-for="Car.EndPrice" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Car.EndPrice" disabled class="form-control" rows="5"></input>
              
            </div>
            <div class="col-2">
                <label asp-for="Car.ManufacturingYear" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Car.ManufacturingYear" disabled class="form-control" rows="5"></>
               
            </div>
            <div disable class="mb-3">
                <label asp-for="Car.IsActive"></label>
                <input asp-for="Car.IsActive" type="checkbox" value="true" checked />
            </div>


          

            <div class="col-5 offset-2">
                <a asp-action="IndexCar" asp-controller="car" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}