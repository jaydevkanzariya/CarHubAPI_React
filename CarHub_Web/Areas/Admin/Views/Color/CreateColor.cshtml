@model CarHub_Web.Models.Dto.ColorCreateDTO

<form asp-action="CreateColor">
    <br />
    <div class="container border p-3">
        <h4 class="text-primary">Create Color</h4>
        <hr />

        <div class="row">
          @*  <div asp-validation-summary="ModelOnly" class="text-danger"></div>*@

            <div class="col-2">
                <label asp-for="ColorName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ColorName" class="form-control" />
                <span asp-validation-for="ColorName" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-5 ">
                <a asp-action="IndexColor" asp-controller="Color" class="btn-primary btn form-control ">Back to List</a>
            </div>
        </div>
    </div>
</form>

                
@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}