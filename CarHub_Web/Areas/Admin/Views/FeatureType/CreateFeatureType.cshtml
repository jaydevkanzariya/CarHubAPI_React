@model CarHub_Web.Models.Dto.FeatureTypeCreateDTO

<form asp-action="CreateFeatureType">
    <br />
    <div class="container border p-3">
        <h4 class="text-primary">Create FeatureType</h4>
        <hr />

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="FeatureTypeName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="FeatureTypeName" class="form-control" />
                <span asp-validation-for="FeatureTypeName" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-5 ">
                <a asp-action="IndexFeatureType" asp-controller="FeatureType" class="btn-primary btn form-control ">Back to List</a>
            </div>
        </div>
    </div>
</form>

                
@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}