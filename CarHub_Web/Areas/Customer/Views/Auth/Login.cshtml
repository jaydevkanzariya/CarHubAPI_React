<div class="wrapper">
    <h2>Login</h2>
    <form method="post">
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="input-box pb-2">
            <input asp-for="UserName" type="text" class="form-control" placeholder="Enter UserName" required>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="input-box pb-2">
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" required>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="input-box button">
            <input type="Submit" class="form-control" value="Login">
        </div>
        <div class="text">
            <h3>Don't have any account? <a asp-area="Customer" asp-controller="Auth" asp-action="Register">Register now</a></h3>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


